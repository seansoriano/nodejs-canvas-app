<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      type="text/css"
      href="/slds/styles/salesforce-lightning-design-system.min.css"
    />
    <script
      src="/canvas-js-sdk/js/canvas-all.js"
      type="text/javascript"
    ></script>
    <style>
      html {
        background: none;
      }
    </style>
  </head>
  <body>
    <h1>Update Contact Information</h1>
    <div class="slds-form">

    <div class="slds-form-element slds-form-element_horizontal">
      <label class="slds-form-element__label">First Name</label>
      <div class="slds-form-element__control">
        <%= contact.FirstName %>
      </div>
    </div>
    <div class="slds-form-element slds-form-element_horizontal">
      <label class="slds-form-element__label" for="text-input-id-54">Email</label>
      <div class="slds-form-element__control">
        <%= contact.Email %>
      </div>
    </div>
    <div class="slds-form-element slds-form-element_horizontal">
      <label class="slds-form-element__label" for="text-input-id-54">Salesforce ID</label>
      <div class="slds-form-element__control">
        <%= contact.Id %>
      </div>
    </div>

    <div class="slds-form-element slds-form-element_horizontal">
      <label class="slds-form-element__label" for="text-input-id-56">Last Name</label>
      <div class="slds-form-element__control">
        <input type="text" value="<%- contact.LastName %>" id="lastname" class="slds-input"/>
      </div>
    </div>

		<!-- <p>Contact First Name:</p>
		<p>Contact Last Name: <%= contact.LastName %></p>
		<p>Contact ID: <%= contact.Id %></p>
		<p>Contact Email: </p>
		<div>
			<p>Contact Last Name: </p> <input type="text" value="<%- contact.LastName %>" id="lastname" class="slds-input"/>
		</div> -->
    <button
      class="slds-button slds-button_brand" 
      onclick="updateRecord();">Update Contact
    </button>
        <!-- <img src="<%- imgSrc %>" alt="Contact QR Code" /> -->
        <!-- <button
              class="slds-button slds-button_brand"
              onclick="validateQR();"
            >
              Update Flag
            </button> -->


    </div>
    <script type="text/javascript">
      var sr = {};
      Sfdc.canvas(function () {
        sr = JSON.parse('<%- sr %>');
        Sfdc.canvas.client.resize(sr.client, {
          height: "250px",
          width: "400px"
        });
        Sfdc.canvas.client.autogrow(sr.client);
      });
      function validateQR() {
        var url =
          sr.context.links.sobjectUrl +
          "Contact/" +
          sr.context.environment.parameters.recordId;
        console.log("validating QR code", url);
        Sfdc.canvas.client.ajax(url, {
          client: sr.client,
          method: "PATCH",
          contentType: "application/json",
          data: '{"QRValidated__c": true}',
          success: function (data) {
            if (204 === data.status) {
              alert("Updated Flag!");
            }
          },
        });
      }

	  function updateRecord() {
			//get value from input 
			var inputValue = Sfdc.canvas.byId("lastname").value;

			//get record id from canvas context 
			var recordId=sr.context.environment.parameters.recordId
			//var objType=sr.context.environment.record.attributes.type;

			// Reference the Chatter user's URL from Context.Links object.
			var url = sr.context.links.sobjectUrl+"Contact/" + recordId + "?_HttpMethod=PATCH";
			var body= {"LastName":inputValue};

			Sfdc.canvas.client.ajax(url, {
				client: sr.client,
				method: "POST",
				contentType: "application/json",
				data: JSON.stringify(body),
				success: function (data) {
					if (204 === data.status) {
						alert("Success. Record Updated.");
					}
				},
			});
		}
    </script>
  </body>
</html>
